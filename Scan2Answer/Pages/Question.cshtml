@page "/question/{id}"
@model Scan2Answer.Pages.QuestionModel
@{
    ViewData["Title"] = "Scan2Answer Questions";
    
}

<div class="card mx-auto" style="width:32rem">

    <img class="card-img-top" alt="QR Code for visiting the site" src="@Model.qrCodeImageData" />
    <div class="card-body">
        <h3 class="card-title">请使用手机扫码回答</h3>


        <a class="btn btn-primary" href="/answer/@Model.SessionID">或者点击进入答题</a>
    </div>
</div>


<div>@Model.Question?.Statement</div>
@for (int i = 0; i < Model.Question?.optionLength(); i++)
{
    <div>@Model.Question?.Options[i].Option</div>
    <div class="progress">
        <div class="progress-bar" 
            role="progressbar" 
            aria-valuenow="0" 
            aria-valuemin="0" 
            aria-valuemax="100" 
            title="progressBar_@i"
            id="pbar_@i"></div>
    </div>
}

<div>当前在线人数：<span id="StudentsOnline">0</span></div>
<div>已经回答人数：<span id="StudentsAnswered">0</span></div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/teacher.js"></script>